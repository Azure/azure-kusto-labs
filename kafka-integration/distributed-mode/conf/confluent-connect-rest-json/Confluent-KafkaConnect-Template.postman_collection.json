				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"name\": \"KustoSinkConnectorCrimes\",\r\n    \"config\": {\r\n        \"connector.class\": \"com.microsoft.azure.kusto.kafka.connect.sink.KustoSinkConnector\",\r\n        \"flush.interval.ms\": \"10000\",\r\n        \"key.converter\": \"org.apache.kafka.connect.storage.StringConverter\",\r\n        \"value.converter\": \"org.apache.kafka.connect.storage.StringConverter\",\r\n        \"tasks.max\": \"6\",\r\n        \"topics\": \"crimes-topic-confluent\",\r\n        \"kusto.tables.topics.mapping\": \"[{'topic': 'crimes-topic-confluent','db': 'crimes_db', 'table': 'crimes_curated_kafka_confluent','format': 'json', 'mapping':'crimes_curated_kafka_confluent_mapping'}]\",\r\n        \"aad.auth.authority\": \"<yourAADTenantID>\",\r\n        \"kusto.ingestion.url\":\"<yourADXIngestURL>\",\r\n        \"kusto.query.url\":\"<yourADXQueryURL>\",\r\n        \"aad.auth.appid\":\"<yourADXServicePrincipalAppID>\",\r\n        \"aad.auth.appkey\":\"<yourADXServicePrincipalSecretKey>\",\r\n        \"tempdir.path\":\"/var/tmp/\",\r\n        \"flush.size.bytes\":\"10000000\"\r\n    }\r\n}"
				},
